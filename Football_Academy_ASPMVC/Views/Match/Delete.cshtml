@model Match

@{
    ViewData["Title"] = "Delete Match";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container mt-4">
    <div class="card shadow p-4 border-danger">
        <h2 class="text-center text-danger mb-4">
            🗑️ Delete Match
        </h2>
        <p class="text-center text-muted">
            Are you sure you want to delete this match? This action cannot be undone.
        </p>
        <hr />

        <dl class="row">
            <dt class="col-sm-3 fw-bold text-danger">
                <i class="bi bi-house-door-fill"></i> Home Team
            </dt>
            <dd class="col-sm-9">@Model.HomeTeam</dd>

            <dt class="col-sm-3 fw-bold text-danger">
                <i class="bi bi-flag-fill"></i> Away Team
            </dt>
            <dd class="col-sm-9">@Model.AwayTeam</dd>

            <dt class="col-sm-3 fw-bold text-danger">
                <i class="bi bi-calendar-event-fill"></i> Match Date
            </dt>
            <dd class="col-sm-9">@Model.MatchDate</dd>

            <dt class="col-sm-3 fw-bold text-danger">
                <i class="bi bi-trophy"></i> Result
            </dt>
            <dd class="col-sm-9">@Model.Result</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>


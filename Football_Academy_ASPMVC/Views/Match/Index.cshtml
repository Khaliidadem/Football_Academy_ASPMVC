@model IEnumerable<Match>

@{
    ViewData["Title"] = "Matches";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">⚽ Upcoming & Played Matches</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Match
        </a>
    </div>

    <div class="row">
        @foreach (var match in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0 h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title text-dark fw-bold">
                            @match.HomeTeam <span class="text-danger">vs</span> @match.AwayTeam
                        </h5>

                        <p class="text-muted mb-1">
                            <i class="bi bi-calendar-event"></i>
                            @match.MatchDate.ToString("dd MMM yyyy, HH:mm")
                        </p>

                        <p class="mb-2">
                            <i class="bi bi-trophy text-warning"></i>
                            <strong>Result:</strong>
                            @if (string.IsNullOrEmpty(match.Result))
                            {
                                <span class="badge bg-secondary">Not Played</span>
                            }
                            else
                            {
                                <span class="badge bg-success">@match.Result</span>
                            }
                        </p>

                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="Edit" asp-route-id="@match.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@match.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                    <div class="card-footer bg-light text-center">
                        <small class="text-muted">Match ID: @match.Id</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
</table>

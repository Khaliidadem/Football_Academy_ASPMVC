@model MedicalStaff

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <div class="card shadow p-4 border-danger">
        <h2 class="text-center text-danger">🗑️ Delete Medical Staff</h2>
        <hr />

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Role</label>
                <input asp-for="Role" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Department</label>
                <input asp-for="Department" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" readonly />
            </div>

            <div class="alert alert-danger text-center">
                ⚠️ Are you sure you want to delete this employee?
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@model IEnumerable<MedicalStaff>

@{
    ViewData["Title"] = "MedicalStaffs";
}


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<h1 class="mb-4 text-center">⚽ Medical Staff</h1>

<div class="text-end mb-4">
    <a asp-action="Create" class="btn btn-primary">➕ Add New </a>
</div>

<div class="row">
    @foreach (var medicalStaffs in Model)
    {
        var cardColor = "primary";

        if (medicalStaffs.Role.Contains("Doctor"))
        {
            cardColor = "danger";
        }
        else if (medicalStaffs.Role.Contains("Physio"))
        {
            cardColor = "success";
        }
        else if (medicalStaffs.Role.Contains("Assistant"))
        {
            cardColor = "warning";
        }

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-@cardColor">
                <div class="card-body text-center">
                    <i class="bi bi-person-badge-fill text-@cardColor" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">@medicalStaffs.FullName</h5>
                    <p class="card-text mb-1"><strong>Role:</strong> @medicalStaffs.Role</p>
                    <p class="card-text mb-1"><strong>Department:</strong> @medicalStaffs.Department</p>
                    <p class="card-text"><i class="bi bi-telephone-fill"></i> @medicalStaffs.PhoneNumber</p>
                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <a asp-action="Edit" asp-route-id="@medicalStaffs.Id" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@medicalStaffs.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


